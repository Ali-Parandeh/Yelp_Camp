<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <!--Send a put a request using methodoverride package-->
            <form method="POST" action="/campgrounds/<%= campground_id%>/comments/<%= comment._id %>?_method=PUT">
                <!-- Using name attribute to pass user input from form to body-parser. Make sure
                to use the exact variable name you use as name attribute value. Ex: req.body.campgroundName or req.body.imageURL -->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value = "<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go to back to view all campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>

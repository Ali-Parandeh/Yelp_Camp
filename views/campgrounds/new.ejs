<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create new campgrounds</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/campgrounds">
                <!-- Using name attribute to pass user input from form to body-parser. Make sure
                to use the exact variable name you use as name attribute value. Ex: req.body.campgroundName or req.body.imageURL -->
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Campground Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Campround Price" min="0.00" step="0.05">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Campground Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go to back to view all campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
